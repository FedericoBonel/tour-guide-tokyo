<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical"
    tools:context=".ItemActivity">

    <ImageView
        android:id="@+id/imageAttraction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageAttractionSize"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/attractionTitle"
        style="@style/AttractionNameItemTextAppearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin16dp"
        android:layout_marginTop="@dimen/margin16dp"
        android:layout_marginRight="@dimen/margin16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/contact_button_frame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/contact_button"
                style="@style/ActivityButtons"
                android:src="@drawable/contact_button_vector" />

            <TextView
                style="@style/AttributesItemTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/contact" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/website_button"
                style="@style/ActivityButtons"
                android:src="@drawable/website_vector" />

            <TextView
                style="@style/AttributesItemTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/website" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location_button"
                style="@style/ActivityButtons"
                android:src="@drawable/location_vector" />

            <TextView
                style="@style/AttributesItemTextAppearance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/LocationMap" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frameSize"
        android:layout_margin="@dimen/margin16dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/hours_text_view_activity"
        style="@style/AttributesPhrases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_business_hours_itemactivity" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/frameSize"
        android:layout_margin="@dimen/margin16dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/description_text_view"
        style="@style/AttributesPhrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>